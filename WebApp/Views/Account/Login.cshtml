@model WebApp.ViewModels.LoginInput

@{
    ViewData["Title"] = "Login";
    var visitorName = ViewBag.VisitorName as string;
    var message = ViewBag.LoginMessage as string;
}

<div class="auth-wrapper">
    <div class="auth-card">
        <div class="auth-title">
            <div class="brand-logo text-decoration-none mb-2">
                <span class="brand-accent">BTEC</span>
                <span class="brand-sub">FPT Education</span>
            </div>
            <h1>Login</h1>
            <p class="text-muted">Please login to continue</p>
        </div>

        @if (!string.IsNullOrEmpty(visitorName))
        {
            <div class="alert alert-success">Hello @visitorName! Please login to continue.</div>
        }
        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-info">@message</div>
        }

        <form asp-action="Login" method="post" class="d-flex flex-column gap-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Username" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0 text-muted">ðŸ‘¤</span>
                    <input asp-for="Username" class="form-control border-start-0" />
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Password" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text bg-white border-end-0 text-muted">ðŸ”’</span>
                    <input asp-for="Password" class="form-control border-start-0" type="password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Login</button>
        </form>

        <div class="mt-4 text-center link-muted">
            Don't have an account? <a asp-action="Register">Register now</a>
        </div>
        <div class="text-center mt-2">
            <a asp-controller="Welcome" asp-action="Index" class="link-muted">&larr; Back to welcome page</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

