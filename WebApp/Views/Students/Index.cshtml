@model IEnumerable<WebApp.Controllers.StudentListItemViewModel>

@{
    ViewData["Title"] = "Quản lý sinh viên";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6">@ViewData["Title"]</h1>
        <p class="text-muted mb-0">Áp dụng Repository + UnitOfWork + Strategy</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">Thêm sinh viên</a>
</div>

<div class="table-responsive shadow-sm bg-white rounded">
    <table class="table table-hover mb-0">
        <thead class="table-light">
        <tr>
            <th>Mã SV</th>
            <th>Họ tên</th>
            <th>Chuyên ngành</th>
            <th>GPA</th>
            <th>Xếp loại (GPA)</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Student.StudentCode</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Student.Id">
                        @item.Student.FullName
                    </a>
                    <div class="small text-muted">@item.Student.Email</div>
                </td>
                <td>@item.Student.Major</td>
                <td>@item.Student.Gpa.ToString("0.00")</td>
                <td>@item.GpaRank</td>
                <td>@item.CreditRank</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Student.Id" class="btn btn-sm btn-outline-secondary">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Student.Id" class="btn btn-sm btn-outline-danger">Xoá</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

