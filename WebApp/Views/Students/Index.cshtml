@model IEnumerable<WebApp.Controllers.StudentListItemViewModel>
@using WebApp.Helpers

@{
    ViewData["Title"] = "Student Management";
    var canManage = AuthorizationHelper.IsAdminOrInstructor(Context.Session);
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6">@ViewData["Title"]</h1>
        <p class="text-muted mb-0">Using Repository + UnitOfWork + Strategy</p>
    </div>
    @if (canManage)
    {
        <a asp-action="Create" class="btn btn-primary">Add Student</a>
    }
</div>

<div class="table-responsive shadow-sm bg-white rounded">
    <table class="table table-hover mb-0">
        <thead class="table-light">
        <tr>
            <th>Student Code</th>
            <th>Full Name</th>
            <th>Major</th>
            <th>GPA</th>
            <th>GPA Rank</th>
            <th>Credit Rank</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Student.StudentCode</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Student.Id">
                        @item.Student.FullName
                    </a>
                    <div class="small text-muted">@item.Student.Email</div>
                </td>
                <td>@item.Student.Major</td>
                <td>@item.Student.Gpa.ToString("0.00")</td>
                <td>@item.GpaRank</td>
                <td>@item.CreditRank</td>
                <td class="text-end">
                    @if (canManage)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Student.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Student.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

