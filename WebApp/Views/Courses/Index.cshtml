@model IEnumerable<WebApp.ViewModels.CourseListItemViewModel>
@using WebApp.Helpers

@{
    ViewData["Title"] = "Courses";
    var canManage = AuthorizationHelper.IsAdminOrInstructor(Context.Session);
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-6">@ViewData["Title"]</h1>
        <p class="text-muted mb-0">Manage course list and enrollment.</p>
    </div>
    @if (canManage)
    {
        <a asp-action="Create" class="btn btn-primary">Add Course</a>
    }
</div>

<div class="table-responsive shadow-sm bg-white rounded">
    <table class="table table-hover mb-0 align-middle">
        <thead class="table-light">
        <tr>
            <th>Code</th>
            <th>Course Title</th>
            <th>Instructor</th>
            <th>Semester</th>
            <th>Credits</th>
            <th>Enrollment</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Course.CourseCode</td>
                <td>
                    <div class="fw-semibold">@item.Course.Title</div>
                    <div class="text-muted small">@item.Course.Description</div>
                </td>
                <td>@item.Course.Instructor</td>
                <td>@item.Course.Semester</td>
                <td>@item.Course.Credits</td>
                <td>@item.EnrolledCount / @item.Course.MaxStudents</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Course.Id" class="btn btn-sm btn-outline-primary me-2">Details</a>
                    @if (canManage)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Course.Id" class="btn btn-sm btn-outline-secondary me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Course.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

