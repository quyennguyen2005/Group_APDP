@model WebApp.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="alert alert-warning">
    Are you sure you want to delete course <strong>@Model.Title (@Model.CourseCode)</strong>? All student assignments will be deleted as well.
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>

