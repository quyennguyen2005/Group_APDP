<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BTEC FPT Education</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body class="dashboard-body">
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="dashboard-sidebar">
            <div class="sidebar-header">
                <div class="brand-logo">
                    <span class="brand-accent">BTEC</span>
                    <span class="brand-sub">Alliance with FPT Education</span>
                </div>
                <button class="sidebar-toggle" type="button">
                    <span>‚ò∞</span>
                </button>
            </div>
            
            <nav class="sidebar-nav">
                @{
                    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                }
                <div class="nav-section">
                    <div class="nav-section-title">MAIN</div>
                    <a asp-controller="Home" asp-action="Index" class="nav-item @(currentController == "Home" ? "active" : "")">
                        <span class="nav-icon">üïê</span>
                        <span>Dashboard</span>
                    </a>
                    <a asp-controller="Courses" asp-action="Index" class="nav-item @(currentController == "Courses" ? "active" : "")">
                        <span class="nav-icon">üìö</span>
                        <span>Courses</span>
                    </a>
                    <a asp-controller="Students" asp-action="Index" class="nav-item @(currentController == "Students" ? "active" : "")">
                        <span class="nav-icon">üë•</span>
                        <span>Students</span>
                    </a>
                    <a asp-controller="Profile" asp-action="Index" class="nav-item @(currentController == "Profile" ? "active" : "")">
                        <span class="nav-icon">üë§</span>
                        <span>Profile</span>
                    </a>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">COMMUNICATION</div>
                    <a href="#" class="nav-item">
                        <span class="nav-icon">‚úâÔ∏è</span>
                        <span>Messages</span>
                    </a>
                    <a href="#" class="nav-item">
                        <span class="nav-icon">üí¨</span>
                        <span>Forum</span>
                    </a>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">ASSESSMENT</div>
                    <a href="#" class="nav-item">
                        <span class="nav-icon">‚úì</span>
                        <span>Assignments</span>
                    </a>
                    <a href="#" class="nav-item">
                        <span class="nav-icon">?</span>
                        <span>Tests</span>
                    </a>
                    <a href="#" class="nav-item">
                        <span class="nav-icon">üìä</span>
                        <span>Grades</span>
                    </a>
                </div>
            </nav>
            
            <div class="sidebar-footer">
                @{
                    var username = Context.Session.GetString("Username") ?? "User";
                    var role = Context.Session.GetString("Role") ?? "User";
                    var initials = string.Join("", username.Split(' ').Select(n => n.Length > 0 ? n[0].ToString() : "").Take(2)).ToUpper();
                    if (string.IsNullOrEmpty(initials)) initials = "U";
                }
                <a asp-controller="Profile" asp-action="Index" class="user-profile-link">
                    <div class="user-profile">
                        <div class="user-avatar">@initials</div>
                        <div class="user-info">
                            <div class="user-name">@username.ToUpper()</div>
                            <div class="user-role">@role</div>
                        </div>
                    </div>
                </a>
                <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                    <button type="submit" class="logout-link">
                        <span>‚Üí</span> Logout
                    </button>
                </form>
            </div>
        </aside>
        
        <!-- Main Content -->
        <main class="dashboard-main">
            <div class="dashboard-header">
                <h1 class="dashboard-title">@(ViewData["Title"] ?? "Dashboard")</h1>
                <div class="dashboard-actions">
                    <div class="search-box">
                        <span>üîç</span>
                        <input type="text" placeholder="Search..." />
                    </div>
                </div>
            </div>
            
            <div class="dashboard-content">
                @RenderBody()
            </div>
        </main>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

