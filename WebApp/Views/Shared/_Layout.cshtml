<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduManage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="main-nav">
        <div class="container-fluid d-flex align-items-center justify-content-between">
            <a class="brand-logo text-decoration-none" asp-area="" asp-controller="Welcome" asp-action="Index">
                <span class="brand-accent">BTEC</span>
                <span class="brand-sub">FPT Education</span>
            </a>
            <nav class="d-flex align-items-center gap-3">
                <a class="nav-link" asp-area="" asp-controller="Welcome" asp-action="Index">Home</a>
                <a class="btn btn-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
            </nav>
        </div>
    </header>
    <main class="page-wrapper">
        @RenderBody()
    </main>
    <footer class="main-footer text-center py-4">
        <div class="container">
            <span class="text-muted">&copy; 2024 BTEC FPT Education.</span>
        </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
